@model IEnumerable<Project.Models.ProdectSeller>

@{
    ViewData["Title"] = "GetAllProducts";
}

<div id="header-carousel" class="carousel slide w-100 mr-5" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active w-100" style="height: 400px;">
            <img class="img-fluid w-100" src="/img/carousel-1.jpg" alt="Image">
            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 700px;">
                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Welome You In Mala Fashion</h4>
                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Your Store Your Place</h3>
                    <a href="/Product/Add" class="btn btn-danger py-2 px-3" style="background-color:#e53637">ADD PRODUCT</a>
                </div>
            </div>
        </div>
        <div class="carousel-item w-100" style="height:400px;">
            <img class="img-fluid  w-100" src="/img/carousel-2.jpg" alt="Image">
            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 700px;">
                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Welome You In Mala Fashion</h4>
                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Your Store Your Place</h3>
                    <a href="/Product/Add" class="btn btn-danger py-2 px-3" style="background-color:#e53637">ADD PRODUCT</a>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
        <div class="btn btn-dark" style="width: 45px; height: 45px;">
            <span class="carousel-control-prev-icon mb-n2"></span>
        </div>
    </a>
    <a class="carousel-control-next" href="#header-carousel" data-slide="next">
        <div class="btn btn-dark" style="width: 45px; height: 45px;">
            <span class="carousel-control-next-icon mb-n2"></span>
        </div>
    </a>
</div>

<div class="container w-75">
<div class="row d-flex flex-wrap my-5 product__filter">
    @foreach (ProdectSeller i in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" >
                      <img src="~/Fiels/imges/@i.Img" >
                        ">
                    <ul class="product__hover text-center">
                        <li>
                            <a href="/Supplier/DeleteItem/@i.Id" class="btn cart px-auto" style="font-size:18px; font-weight:800">Delete</a>

                         </li>
                    </ul>
                </div>
                <div class="product__item__text text-center">
                    <h6>@i.Prodect.Name</h6>
                    <a href="/Supplier/EditProduct/@i.Id" class="btn details px-auto">view details</a><br />

                </div>
            </div>
        </div>
    }
    </div>
</div>
