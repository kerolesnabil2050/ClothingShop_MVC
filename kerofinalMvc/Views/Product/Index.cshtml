@model List<ProdectSeller>

@{
    ViewData["Title"] = "Index";
    Layout = "_IndexLayout";
}



<div class="container w-75">

<div class="row container d-flex flex-wrap my-5 product__filter">
    @foreach (ProdectSeller i in Model)
   {
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="product__item">
                    <div class="product__item__pic set-bg" style="width:200px;height:350px" >
                        <img src="~/Fiels/imges/@i.Img" style="width:200px;height:350px">
                    <ul class="product__hover text-center">
                        <li>

                            <label asp-for="@i.Prodect.Brand" style="font-size:16px;font-weight:bolder; cursor:pointer;">@i.Prodect.Brand</label>
                               
                        </li>
                    </ul>
                </div>
                <div class="product__item__text text-center">
                    <h6>@i.Prodect.Name</h6>
                        <a href="Product/GETSpecificItem/@i.ProdectId" class="add-cart">View Details</a>

                        <h5>@i.Price <label class="text-muted" style="font-weight:lighter">Ps</label></h5>

                </div>
            </div>
        </div>
    }
</div>
    </div>
