@model Project.ViewModels.SpecificItemViewModel;
@{
    ViewData["Title"] = "GETSpecificItem";
    Layout = "_MyLayout";
    SelectList Colors = new SelectList(ViewBag.Colors);
    SelectList Size = new SelectList(ViewBag.Size);


}


<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v7 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" href="/css/styleNAv.css"/>
</head>
<body class="form-v7" style="background-color:white">
	<div class="page-content">
		<div class="form-v7-content">
			<div class="form-left">
				<img src="~/Fiels/imges/@Model.Imge" id="main_product_image" alt="form">
			</div>
			<form class="form-detail" asp-action="Add" asp-controller="Card" method="post" id="myform">
				<div class="form-row mt-3 text-center">
					<label asp-for="Name" class="text-center" style="font-size:20px">@Model.Name</label>
				</div>
				<div class="form-row my-3 text-center">
					<label asp-for="Brand">@Model.Brand</label>
					<input asp-for="ProductId" style="width:70px" hidden />
				</div>
				<div class="form-row mt-3 text-center">
					<label asp-for="Description">@Model.Description</label>
				</div>
				<div class="form-row my-3">
					<label asp-for="Color"></label>
					<select asp-for="Color" class="form-group mx-3" asp-items="Colors"
							style="width:130px;height:30px"></select>
				</div>
				<div class="form-row mt-3">
					<label asp-for="Size"></label>
					<select asp-for="Size" class="form-group mx-3" asp-items="Size"
							style="width:130px;height:30px"></select>
				</div>
				<div class="form-row my-3">
					<label asp-for="Quntity"></label>
					<input asp-for="Quntity" type="number" min="1" class="mt-3" style="width:200px" value="1" />
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Add To Card" style=" background-color:#e53637;border:solid 1px #e53637 ">
					
				</div>
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body>
</html>
